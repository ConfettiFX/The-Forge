	Out.yz *= (Get(buttonSet2) & FWRD_SLASH_BIT) != 0 ? circle(uv - FWRD_SLASH_POS, circleRadius) : 1.0f;
	Out.yz *= (Get(buttonSet2) & SHIFT_R_BIT) != 0 ? circle(uv - SHIFT_R_POS, circleRadius) : 1.0f;
	Out.yz *= (Get(buttonSet2) & KP_1_END_BIT) != 0 ? circle(uv - KP_1_END_POS, circleRadius) : 1.0f;
	Out.yz *= (Get(buttonSet2) & KP_2_DOWN_BIT) != 0 ? circle(uv - KP_2_DOWN_POS, circleRadius) : 1.0f;
	Out.yz *= (Get(buttonSet2) & KP_3_PAGE_DOWN_BIT) != 0 ? circle(uv - KP_3_PAGE_DOWN_POS, circleRadius) : 1.0f;

	Out.yz *= (Get(buttonSet2) & CTRL_L_BIT) != 0 ? circle(uv - CTRL_L_POS, circleRadius) : 1.0f;
	Out.yz *= (Get(buttonSet2) & ALT_L_BIT) != 0 ? circle(uv - ALT_L_POS, circleRadius) : 1.0f;
	Out.yz *= (Get(buttonSet2) & SPACE_BIT) != 0 ? circle(uv - SPACE_POS, circleRadius) : 1.0f;
	Out.yz *= (Get(buttonSet2) & ALT_R_BIT) != 0 ? circle(uv - ALT_R_POS, circleRadius) : 1.0f;
	Out.yz *= (Get(buttonSet2) & CTRL_R_BIT) != 0 ? circle(uv - CTRL_R_POS, circleRadius) : 1.0f;
	Out.yz *= (Get(buttonSet2) & LEFT_BIT) != 0 ? circle(uv - LEFT_POS, circleRadius) : 1.0f;
	Out.yz *= (Get(buttonSet2) & RIGHT_BIT) != 0 ? circle(uv - RIGHT_POS, circleRadius) : 1.0f;
	Out.yz *= (Get(buttonSet2) & UP_BIT) != 0 ? circle(uv - UP_POS, circleRadius) : 1.0f;
	Out.yz *= (Get(buttonSet2) & DOWN_BIT) != 0 ? circle(uv - DOWN_POS, circleRadius) : 1.0f;
	Out.yz *= (Get(buttonSet2) & KP_0_INSERT_BIT) != 0 ? circle(uv - KP_0_INSERT_POS, circleRadius) : 1.0f;

	Out.yz *= (Get(buttonSet2) & LEFT_CLICK_BIT) != 0 ? circle(uv - LEFT_CLICK_POS, circleRadius) : 1.0f;
	Out.yz *= (Get(buttonSet2) & MID_CLICK_BIT) != 0 ? circle(uv - MID_CLICK_POS, circleRadius) : 1.0f;
	Out.yz *= (Get(buttonSet2) & RIGHT_CLICK_BIT) != 0 ? circle(uv - RIGHT_CLICK_POS, circleRadius) : 1.0f;
	Out.yz *= (Get(buttonSet2) & SCROLL_UP_BIT) != 0 ? circle(uv - SCROLL_UP_POS, circleRadius) : 1.0f;
	Out.yz *= (Get(buttonSet3) & SCROLL_DOWN_BIT) != 0 ? circle(uv - SCROLL_DOWN_POS, circleRadius) : 1.0f;

	return Out;
}

float4 PS_MAIN( VSOutput In )
{
	INIT_MAIN;

	float4 Out = { 0.5f, 0.5f, 0.5f, 0.5f };
	float2 uv = In.TexCoords;
	
	uint dt = Get(deviceType);
	if(dt == 0)
	{
		discard;
	} 
	else if(dt == 1)
	{
		float2 adjustment = float2(
			min((Get(wndSize).y / Get(wndSize).x) * (GamepadTexRes.x / GamepadTexRes.y), 1.0f),
			min((Get(wndSize).x / Get(wndSize).y) * (GamepadTexRes.y / GamepadTexRes.x), 1.0f)
		);

		uv -= (1.0f - adjustment) * 0.5f;
		uv /= adjustment;

  		Out = SampleTex2D(Texture, Sampler, uv);
		uv /= float2(GamepadTexRes.y / GamepadTexRes.x, 1.0f);
		Out = Gamepad(In, Out, uv);
	}
	else if(dt == 2)
	{
		Out = Touch(In, Out, uv);
	}
	else if(dt == 3 || dt == 4)
	{
		float2 adjustment = float2(
			min((Get(wndSize).y / Get(wndSize).x) * (KeyboardMouseTexRes.x / KeyboardMouseTexRes.y), 1.0f),
			min((Get(wndSize).x / Get(wndSize).y) * (KeyboardMouseTexRes.y / KeyboardMouseTexRes.x), 1.0f)
		);

		uv -= (1.0f - adjustment) * 0.5f;
		uv /= adjustment;
		
  		Out = SampleTex2D(Texture, Sampler, uv);
		uv /= float2(KeyboardMouseTexRes.y / KeyboardMouseTexRes.x, 1.0f);
		Out = KeyboardMouse(In, Out, uv);
	}

	RETURN(Out);
}
