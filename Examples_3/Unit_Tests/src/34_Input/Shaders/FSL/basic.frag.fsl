STRUCT(VSOutput)
{
	DATA(float4, Position, SV_Position);
	DATA(float2, TexCoords, TEXCOORD0);
};

CBUFFER(InputData, UPDATE_FREQ_PER_FRAME, b0, binding = 0)
{
	DATA(float2, wndSize, None);

    DATA(float2, leftAxis, None);
    DATA(float2, rightAxis, None);
	DATA(float2, motionButtons, None);
	DATA(uint, deviceType, None); // 0.Invalid 1.Gamepad 2.Touch 3&4.Keyboard+Mouse
	DATA(uint, buttonSet0, None);
	DATA(uint, buttonSet1, None);
	DATA(uint, buttonSet2, None);
	DATA(uint, buttonSet3, None);
};

float circle(float2 pos, float rad)
{
	return step(rad, length(pos));
}

float4 Gamepad(VSOutput In, float4 Out, float2 uv)
{
	Out.yz *= circle((uv - (LEFT_STICK_POS + Get(leftAxis) * projectionScale)).xy, 0.01f);
	Out.yz *= circle((uv - (RIGHT_STICK_POS + Get(rightAxis) * projectionScale)).xy, 0.01f);

	Out.yz *= (Get(buttonSet0) & CONTROLLER_DPAD_LEFT_BIT) != 0 ? circle(uv - BUTTON_DPAD_LEFT_POS, 0.02f) : 1.0f;
	Out.yz *= (Get(buttonSet0) & CONTROLLER_DPAD_RIGHT_BIT) != 0 ? circle(uv - BUTTON_DPAD_RIGHT_POS, 0.02f) : 1.0f;
	Out.yz *= (Get(buttonSet0) & CONTROLLER_DPAD_UP_BIT) != 0 ? circle(uv - BUTTON_DPAD_UP_POS, 0.02f) : 1.0f;
	Out.yz *= (Get(buttonSet0) & CONTROLLER_DPAD_DOWN_BIT) != 0 ? circle(uv - BUTTON_DPAD_DOWN_POS, 0.02f) : 1.0f;
	Out.yz *= (Get(buttonSet0) & CONTROLLER_A_BIT) != 0 ? circle(uv - BUTTON_SOUTH_POS, 0.03f) : 1.0f;
	Out.yz *= (Get(buttonSet0) & CONTROLLER_B_BIT) != 0 ? circle(uv - BUTTON_EAST_POS, 0.03f) : 1.0f;
	Out.yz *= (Get(buttonSet0) & CONTROLLER_X_BIT) != 0 ? circle(uv - BUTTON_WEST_POS, 0.03f) : 1.0f;
	Out.yz *= (Get(buttonSet0) & CONTROLLER_Y_BIT) != 0 ? circle(uv - BUTTON_NORTH_POS, 0.03f) : 1.0f;

	Out.yz *= (Get(buttonSet0) & CONTROLLER_L1_BIT) != 0 ? circle(uv - BUTTON_L1_POS, 0.02f) : 1.0f;
	Out.yz *= (Get(buttonSet0) & CONTROLLER_R1_BIT) != 0 ? circle(uv - BUTTON_R1_POS, 0.02f) : 1.0f;
	Out.yz *= circle(uv - BUTTON_L2_POS + float2(0.0f, Get(motionButtons).x * projectionScale), 0.02f);
	Out.yz *= circle(uv - BUTTON_R2_POS + float2(0.0f, Get(motionButtons).y * projectionScale), 0.02f);
	Out.yz *= (Get(buttonSet0) & CONTROLLER_L3_BIT) != 0 ? circle(uv - BUTTON_L3_POS, 0.03f) : 1.0f;
	Out.yz *= (Get(buttonSet0) & CONTROLLER_R3_BIT) != 0 ? circle(uv - BUTTON_R3_POS, 0.03f) : 1.0f;

	Out.yz *= (Get(buttonSet0) & CONTROLLER_START_BIT) != 0 ? circle(uv - BUTTON_START_POS, 0.01f) : 1.0f;
	Out.yz *= (Get(buttonSet0) & CONTROLLER_SELECT_BIT) != 0 ? circle(uv - BUTTON_SELECT_POS, 0.01f) : 1.0f;
	Out.yz *= (Get(buttonSet0) & CONTROLLER_HOME_BIT) != 0 ? circle(uv - BUTTON_HOME_POS, 0.03f) : 1.0f;

	return Out;
}

float4 Touch(VSOutput In, float4 Out, float2 uv)
