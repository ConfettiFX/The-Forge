#include "shaderDefs.h.fsl"
#define AOIT_UNORDERED_ACCESS
#include "AOIT.h.fsl"
#include "shading.h.fsl"

STRUCT(VSOutput)
{
	DATA(float4, Position, SV_Position);
	DATA(float4, WorldPosition, POSITION);
	DATA(float4, Normal, NORMAL);
	DATA(float4, UV, TEXCOORD0);
	DATA(FLAT(uint), MatID, MAT_ID);
#if FT_MULTIVIEW
	DATA(FLAT(uint), ViewID, TEXCOORD1);
#endif
};

EARLY_FRAGMENT_TESTS
void PS_MAIN( VSOutput In )
{
	INIT_MAIN;
	float4 finalColor = Shade(In.MatID, In.UV.xy, In.WorldPosition.xyz, normalize(In.Normal.xyz), VR_VIEW_ID(In.ViewID));

    BeginPSInterlock();

	if(finalColor.a > 0.01f)
	{
#if FT_MULTIVIEW	
		WriteNewPixelToAOIT(In.Position.xy, VR_VIEW_ID(In.ViewID), In.Position.z, finalColor);
#else
		WriteNewPixelToAOIT(In.Position.xy, In.Position.z, finalColor);
#endif
	}

    EndPSInterlock();

	clip(-1.0f);
	RETURN();
}
