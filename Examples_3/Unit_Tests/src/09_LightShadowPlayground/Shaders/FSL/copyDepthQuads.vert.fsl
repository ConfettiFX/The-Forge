#define QUADS_ARRAY_REGS 192

RES(SamplerState, clampToEdgeNearSampler, UPDATE_FREQ_NONE, s0, binding = 1);
RES(Tex2D(float4), DepthPassTexture, UPDATE_FREQ_NONE, t1, binding = 2);

CBUFFER(AtlasQuads_CB, UPDATE_FREQ_PER_FRAME, b0, binding = 0)
{
	DATA(float4, mPosData, None);
	DATA(float4, mMiscData, None);
	DATA(float4, mTexCoordData, None);
};

STRUCT(VSOutput)
{
    DATA(float4, Position, SV_Position);
    DATA(float2, UV, TEXCOORD0);
    DATA(float4, MiscData, TEXCOORD1);
};

float2 ScaleOffset(float2 a, float4 p)
{
	return a * p.xy + p.zw;
}

VSOutput VS_MAIN( SV_VertexID(uint) vertexID )
{
	INIT_MAIN;
	VSOutput Out;

	float2 pos = float2(-1.0,1.0 );

	if( vertexID == 1 ) pos = float2(-1.0, -1.0 );
    if( vertexID == 2 ) pos = float2( 1.0,-1.0 );
    if( vertexID == 3 ) pos = float2( 1.0,-1.0 );
    if( vertexID == 4 ) pos = float2(1.0, 1.0 );
    if( vertexID == 5 ) pos = float2( -1.0, 1.0 );
	
	Out.Position = float4(ScaleOffset(pos, Get(mPosData)), 0.0, 1.0);
	Out.MiscData = Get(mMiscData);
	Out.UV = ScaleOffset(float2(0.5, -0.5) * pos + 0.5, Get(mTexCoordData));

	RETURN(Out);
}
