#include "Shader_Defs.h.fsl"
#define MESH_PASS
#include "vb_resources.h.fsl"

STRUCT(PsOut)
{
	DATA(float4, moments, SV_Target0);
};

PsOut PS_MAIN( PsInOpaque In )
{
	INIT_MAIN;
	float d = In.position.z;
	PsOut Out = {f4(0)};
	Out.moments = PackMoments(float4(d, d*d, d*d*d, d*d*d*d));
	RETURN(Out);
}
