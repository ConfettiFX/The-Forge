#define FONTSTASH3D
#include "FontStash.srt.h"

STRUCT(VsIn)
{
	DATA(float2, position, Position);
	DATA(float2, texCoord, TEXCOORD0);
};

STRUCT(PsIn)
{
	DATA(float4, position, SV_Position);
	DATA(float2, texCoord, TEXCOORD0);
};

ROOT_SIGNATURE(DefaultRootSignature)
PsIn VS_MAIN( VsIn In )
{
	INIT_MAIN;

	float4x4 modelViewProj = gUniformBlock.mvp[VR_VIEW_ID];

	PsIn Out;
	Out.position = mul(modelViewProj, float4(In.position * gUniformBlock.scaleBias.xy, 1.0f, 1.0f));
	Out.texCoord = In.texCoord;
	RETURN(Out);
}
