RES(Tex2DArray(float4), SourceTexture, UPDATE_FREQ_NONE, t0, binding = 0);
RES(SamplerState, repeatBillinearSampler, UPDATE_FREQ_NONE, s1, binding = 1);

STRUCT(PsIn)
{
	DATA(float4, position, SV_Position);
	DATA(float2, texCoord, TEXCOORD);
	DATA(FLAT(uint), ViewID, TEXCOORD1);
};

float4 PS_MAIN( PsIn In )
{
	INIT_MAIN;
	float4 Out;
	float4 sceneColor = SampleTex2DArray(Get(SourceTexture), Get(repeatBillinearSampler), float3(In.texCoord, VR_VIEW_ID(In.ViewID)));
	Out = float4(sceneColor.rgb, 1.0);
	RETURN(Out);
}
