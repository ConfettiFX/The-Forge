#include "skinning.h"

STRUCT(VSOutput)
{
    DATA(float4, Position, SV_Position);
    DATA(float3, Normal, NORMAL);
    DATA(float2, UV, TEXCOORD0);
};

float4 PS_MAIN(VSOutput In)
{
    INIT_MAIN;
    float4 Out;
    float nDotl =  saturate((dot(normalize(In.Normal), float3(0, 1, 0)) + 1.0f) * 0.5f);
    float3 color = SampleTex2D(Get(DiffuseTexture), Get(DefaultSampler), In.UV).rgb;
    Out = float4(color * nDotl, 1.0f);
    RETURN(Out);
}