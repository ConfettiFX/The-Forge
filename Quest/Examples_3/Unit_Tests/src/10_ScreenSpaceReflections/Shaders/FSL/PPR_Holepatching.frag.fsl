CBUFFER(cbExtendCamera, UPDATE_FREQ_PER_FRAME, b0, binding = 0)
{
	DATA(float4x4, viewMat, None);
	DATA(float4x4, projMat[VR_MULTIVIEW_COUNT], None);
	DATA(float4x4, viewProjMat[VR_MULTIVIEW_COUNT], None);
	DATA(float4x4, InvViewProjMat[VR_MULTIVIEW_COUNT], None);

	DATA(float4, cameraWorldPos, None);
	DATA(float4, viewPortSize, None);
};

RES(Tex2DArray(float4), SceneTexture, UPDATE_FREQ_NONE, t1, binding = 1);
RES(Tex2DArray(float4), SSRTexture, UPDATE_FREQ_NONE, t2, binding = 2);


CBUFFER(cbProperties, UPDATE_FREQ_PER_FRAME, b3, binding = 3)
{
	DATA(uint, renderMode, None);
	DATA(float, useHolePatching, None);
	DATA(float, useExpensiveHolePatching, None);
	DATA(float, useNormalMap, None);

	DATA(float, intensity, None);
	DATA(float, useFadeEffect, None);
	DATA(float, padding01, None);
	DATA(float, padding02, None);
};

RES(SamplerState, nearestSampler, UPDATE_FREQ_NONE, s4, binding = 4);
RES(SamplerState, bilinearSampler, UPDATE_FREQ_NONE, s5, binding = 5);


STRUCT(VSOutput)
{
	DATA(float4, Position, SV_Position);
	DATA(float2, uv, TEXCOORD0);
	DATA(FLAT(uint), ViewID, TEXCOORD1);
};

float4 PS_MAIN( VSOutput In )
{	
	INIT_MAIN;
	float4 outColor;
	outColor = float4(0.0, 0.0, 0.0, 0.0);
	float4 ssrColor = SampleTex2DArray(Get(SSRTexture), Get(nearestSampler), float3(In.uv, VR_VIEW_ID(In.ViewID)));	
	
	if(Get(renderMode) == 0)
	{
		outColor = SampleTex2DArray(Get(SceneTexture), Get(bilinearSampler), float3(In.uv, VR_VIEW_ID(In.ViewID)));
		outColor = outColor / (outColor + f4(1));

#if !defined(ORBIS)
		float gammaCorr = 1.0f / 2.2f;
		outColor.r = pow(outColor.r, gammaCorr);
		outColor.g = pow(outColor.g, gammaCorr);
		outColor.b = pow(outColor.b, gammaCorr);
#endif

		outColor.w = 1.0f;
		RETURN(outColor);
	}		
	else if(Get(renderMode) == 1)
	{
		outColor = float4(0.0, 0.0, 0.0, 0.0);
	}
	
	if(Get(useHolePatching) < 0.5)
	{
		outColor.w = 1.0;

		if(ssrColor.w > 0.0)
		{
			outColor = ssrColor;
		}
	}
	else if(ssrColor.w > 0.0)
	{
		float threshold = ssrColor.w;
		float minOffset = threshold;
		

		float4 neighborColor00 = SampleTex2DArray(Get(SSRTexture), Get(nearestSampler), float3(In.uv + float2(1.0/Get(viewPortSize).x, VR_VIEW_ID(In.ViewID)), 0.0));
		float4 neighborColorB00 = SampleTex2DArray(Get(SSRTexture), Get(bilinearSampler), float3(In.uv + float2(1.0/Get(viewPortSize).x, VR_VIEW_ID(In.ViewID)), 0.0));
		if(neighborColor00.w > 0.0)
		{
			minOffset = min(minOffset, neighborColor00.w);			
		}

		float4 neighborColor01 = SampleTex2DArray(Get(SSRTexture), Get(nearestSampler), float3(In.uv - float2(1.0/Get(viewPortSize).x, VR_VIEW_ID(In.ViewID)), 0.0));
		float4 neighborColorB01 = SampleTex2DArray(Get(SSRTexture), Get(bilinearSampler), float3(In.uv - float2(1.0/Get(viewPortSize).x, VR_VIEW_ID(In.ViewID)), 0.0));
		if(neighborColor01.w > 0.0)
		{
			minOffset = min(minOffset, neighborColor01.w);			
		}

		float4 neighborColor02 = SampleTex2DArray(Get(SSRTexture), Get(nearestSampler), float3(In.uv + float2(0.0, 1.0/Get(viewPortSize).y), VR_VIEW_ID(In.ViewID)));
		float4 neighborColorB02 = SampleTex2DArray(Get(SSRTexture), Get(bilinearSampler), float3(In.uv + float2(0.0, 1.0/Get(viewPortSize).y), VR_VIEW_ID(In.ViewID)));
		if(neighborColor02.w > 0.0)
		{
			minOffset = min(minOffset, neighborColor02.w);			
		}

		float4 neighborColor03 = SampleTex2DArray(Get(SSRTexture), Get(nearestSampler), float3(In.uv - float2(0.0, 1.0/Get(viewPortSize).y), VR_VIEW_ID(In.ViewID)));
		float4 neighborColorB03 = SampleTex2DArray(Get(SSRTexture), Get(bilinearSampler), float3(In.uv - float2(0.0, 1.0/Get(viewPortSize).y), VR_VIEW_ID(In.ViewID)));
		if(neighborColor03.w > 0.0)
		{
			minOffset = min(minOffset, neighborColor03.w);			
		}

		float4 neighborColor04 = SampleTex2DArray(Get(SSRTexture), Get(nearestSampler), float3(In.uv + float2(1.0/Get(viewPortSize).x, 1.0/Get(viewPortSize).y), VR_VIEW_ID(In.ViewID)));
		float4 neighborColorB04 = SampleTex2DArray(Get(SSRTexture), Get(bilinearSampler), float3(In.uv + float2(1.0/Get(viewPortSize).x, 1.0/Get(viewPortSize).y), VR_VIEW_ID(In.ViewID)));


		float4 neighborColor05 = SampleTex2DArray(Get(SSRTexture), Get(nearestSampler), float3(In.uv + float2(1.0/Get(viewPortSize).x, -1.0/Get(viewPortSize).y), VR_VIEW_ID(In.ViewID)));
		float4 neighborColorB05 = SampleTex2DArray(Get(SSRTexture), Get(bilinearSampler), float3(In.uv +float2(1.0/Get(viewPortSize).x, -1.0/Get(viewPortSize).y), VR_VIEW_ID(In.ViewID)));


		float4 neighborColor06 = SampleTex2DArray(Get(SSRTexture), Get(nearestSampler), float3(In.uv + float2(-1.0/Get(viewPortSize).x, 1.0/Get(viewPortSize).y), VR_VIEW_ID(In.ViewID)));
		float4 neighborColorB06 = SampleTex2DArray(Get(SSRTexture), Get(bilinearSampler), float3(In.uv + float2(-1.0/Get(viewPortSize).x, 1.0/Get(viewPortSize).y), VR_VIEW_ID(In.ViewID)));


		float4 neighborColor07 = SampleTex2DArray(Get(SSRTexture), Get(nearestSampler), float3(In.uv - float2(1.0/Get(viewPortSize).x, 1.0/Get(viewPortSize).y), VR_VIEW_ID(In.ViewID)));
		float4 neighborColorB07 = SampleTex2DArray(Get(SSRTexture), Get(bilinearSampler), float3(In.uv - float2(1.0/Get(viewPortSize).x, 1.0/Get(viewPortSize).y), VR_VIEW_ID(In.ViewID)));


		bool bUseExpensiveHolePatching = Get(useExpensiveHolePatching) > 0.5;

		if(bUseExpensiveHolePatching)
		{
				
			if(neighborColor04.w > 0.0)
			{
				minOffset = min(minOffset, neighborColor04.w);			
			}

				
			if(neighborColor05.w > 0.0)
			{
				minOffset = min(minOffset, neighborColor05.w);			
			}

				
			if(neighborColor06.w > 0.0)
			{
				minOffset = min(minOffset, neighborColor06.w);			
			}

				
			if(neighborColor07.w > 0.0)
			{
				minOffset = min(minOffset, neighborColor07.w);			
			}

		}

		float blendValue = 0.5;

		if(bUseExpensiveHolePatching)
		{
			if(minOffset == neighborColor00.w)
			{
					outColor =  lerp(neighborColor00, neighborColorB00, blendValue);
			}
			else if(minOffset == neighborColor01.w)
			{
					outColor = lerp(neighborColor01, neighborColorB01, blendValue);
			}
			else if(minOffset == neighborColor02.w)
			{
					outColor = lerp(neighborColor02, neighborColorB02, blendValue);
			}
			else if(minOffset == neighborColor03.w)
			{
					outColor = lerp(neighborColor03, neighborColorB03, blendValue);
			}
			else if(minOffset == neighborColor04.w)
			{
					outColor = lerp(neighborColor04, neighborColorB04, blendValue);
			}
			else if(minOffset == neighborColor05.w)
			{
					outColor = lerp(neighborColor05, neighborColorB05, blendValue);
			}
			else if(minOffset == neighborColor06.w)
			{
					outColor = lerp(neighborColor06, neighborColorB06, blendValue);
			}
			else if(minOffset == neighborColor07.w)
			{
					outColor = lerp(neighborColor07, neighborColorB07, blendValue);
			}
		}
		else
		{
			if(minOffset == neighborColor00.w)
			{
					outColor = lerp(neighborColor00, neighborColorB00, blendValue);
			}
			else if(minOffset == neighborColor01.w)
			{
					outColor = lerp(neighborColor01, neighborColorB01, blendValue);
			}
			else if(minOffset == neighborColor02.w)
			{
					outColor = lerp(neighborColor02, neighborColorB02, blendValue);
			}
			else if(minOffset == neighborColor03.w)
			{
					outColor = lerp(neighborColor03, neighborColorB03, blendValue);
			}
		}

		//outColor *= intensity;
		
		if(minOffset <= threshold)
			outColor.w = 1.0;
		else
			outColor.w = 0.0;


	}
	
	if(Get(renderMode) == 3)
	{
		if(ssrColor.w <= 0.0)
			outColor = SampleTex2DArray(Get(SceneTexture), Get(bilinearSampler), float3(In.uv, VR_VIEW_ID(In.ViewID)));
	}

	if(Get(renderMode) == 2)
	{
		outColor = outColor * Get(intensity) + SampleTex2DArray(Get(SceneTexture), Get(bilinearSampler), float3(In.uv, VR_VIEW_ID(In.ViewID)));	
	}

	outColor = outColor / (outColor + float4(1.0f, 1.0f, 1.0f, 1.0f));

#if !defined(ORBIS)
	float gammaCorr = 1.0f / 2.2f;
	outColor.r = pow(outColor.r, gammaCorr);
	outColor.g = pow(outColor.g, gammaCorr);
	outColor.b = pow(outColor.b, gammaCorr);
#endif

	outColor.w = 1.0f;
	RETURN(outColor);
}