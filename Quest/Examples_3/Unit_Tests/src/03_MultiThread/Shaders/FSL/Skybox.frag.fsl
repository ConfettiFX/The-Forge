#include "resources.h"

STRUCT(VSOutput)
{
	DATA(float4, Position, SV_Position);
	DATA(float4, TexCoord, TEXCOORD);
};

float4 PS_MAIN( VSOutput In )
{
    INIT_MAIN;
    float4 Out;

    float2 newtextcoord;
    float side = round(In.TexCoord.w);

	if(side==1.0f)
    {
        newtextcoord = (In.TexCoord.zy) / 20 + 0.5;
        newtextcoord = float2(1 - newtextcoord.x, 1 - newtextcoord.y);
        Out = SampleTex2D(Get(RightText), Get(uSkyboxSampler), newtextcoord);
    }
    else if (side == 2.0f)
    {
        newtextcoord = (In.TexCoord.zy) / 20 + 0.5;
        newtextcoord = float2(newtextcoord.x, 1 - newtextcoord.y);
        Out = SampleTex2D(Get(LeftText), Get(uSkyboxSampler), newtextcoord);
    }
    else if (side == 4.0f)
    {
        newtextcoord = (In.TexCoord.xz) / 20 +0.5;
        newtextcoord = float2(newtextcoord.x, 1 - newtextcoord.y);
        Out = SampleTex2D(Get(BotText), Get(uSkyboxSampler), newtextcoord);
    }
    else if (side == 5.0f)
    {
        newtextcoord = (In.TexCoord.xy) / 20 + 0.5;
        newtextcoord = float2(newtextcoord.x, 1 - newtextcoord.y);
        Out = SampleTex2D(Get(FrontText), Get(uSkyboxSampler), newtextcoord);
    }
    else if (side == 6.0f)
    {
        newtextcoord = (In.TexCoord.xy) / 20 + 0.5;
        newtextcoord = float2(1-newtextcoord.x, 1 - newtextcoord.y);
        Out = SampleTex2D(Get(BackText), Get(uSkyboxSampler), newtextcoord);
    }
	else
    {
        newtextcoord = (In.TexCoord.xz) / 20 + 0.5;
        newtextcoord = float2(newtextcoord.x, newtextcoord.y);
        Out = SampleTex2D(Get(TopText), Get(uSkyboxSampler), newtextcoord);
    }
    RETURN(Out);
}
